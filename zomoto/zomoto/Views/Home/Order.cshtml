
@{
    ViewBag.Title = "Order";
}

@*<h2>Order</h2>*@

<html>
<head>
    <style>
        body {
            background-color: #7f1501;
            color: white;
        }

        input {
            background-color: black;
            color: white;
            border-radius: 15px;
            margin: 2px 10px;
            border-style: none;
        }

        table {
            margin: 80px 40%;
            border: none;
        }
    </style>
</head>
<body>
    <div>
        <center>
            <form name="listForm">
                <center><h1>Select Your Dishes</h1></center>
                <table>
                    <tr>
                        <td>
                            <input type="checkbox" value="150" name="choice" onchange="checkTotal()" id="biryani" />Biryani
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" value="200" name="choice" onchange="checkTotal()" id="chicken" />Chicken
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" value="100" name="choice" onchange="checkTotal()" id="friedRice" />Fried Rice
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" value="25" name="choice" onchange="checkTotal()" id="dosa" />Dosa
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" value="25" name="choice" onchange="checkTotal()" id="parata" />Parata
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" value="120" name="choice" onchange="checkTotal()" id="pizza" />Pizza
                        </td>
                    </tr>

                </table>
                <label>Total Bill : </label> <input type="text" name="total" value="0" disabled="disabled" />

                <br />
                <center>
                    <b>Payment Method :</b>
                    <br />
                    <p> ! Only Cash on delivery</p>
                    <br />
                    <input type="submit" value="Place Order" class="btn-success" onclick="placeOrder()" />
                </center>

            </form>
        </center>
    </div>
    <script>
        function checkTotal() {
            document.listForm.total.value = "0";
        var sum = 0;
        for (i=0;i<document.listForm.choice.length;i++) {
          if (document.listForm.choice[i].checked) {
              sum = sum + parseInt(document.listForm.choice[i].value);
          }
        }
        document.listForm.total.value = sum;
    }

        function placeOrder() {
        if (document.listForm.total.value == "0"){
            alert("Please Select Your Dish");
        }
        else {
            alert("Order Placed");
        }
    }
    </script>

</body>
</html>


